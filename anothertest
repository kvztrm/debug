local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local root = character:WaitForChild("HumanoidRootPart")

local orbiting = true

local function getBloxyColas()
    local parts = {}
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj.Name == "BloxyCola" and obj:IsA("BasePart") then
            table.insert(parts, obj)
        end
    end
    return parts
end

local bloxyColas = getBloxyColas()

local timePassed = 0

RunService.Heartbeat:Connect(function(deltaTime)
    if not orbiting then return end

    timePassed = timePassed + deltaTime

    for index, part in ipairs(bloxyColas) do
        if not part or not part.Parent then continue end

        local angle = timePassed * 1.5 + (index * 1.618)
        
        local x = math.cos(angle) * 8
        local z = math.sin(angle) * 8
        local y = math.sin(angle * 0.7) * 1.2

        local targetPos = root.Position + Vector3.new(x, y, z)

        pcall(function()
            part.CFrame = part.CFrame:Lerp(
                CFrame.new(targetPos) * CFrame.Angles(0, angle * 0.3, 0),
                0.18
            )
        end)
    end
end)

spawn(function()
    while true do
        task.wait(5)
        bloxyColas = getBloxyColas()
    end
end)
