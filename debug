-- Get prompt info
local function getPromptInfo(part)
    if not part then
        print("[NIL] Part is nil")
        return nil, nil
    end

    print("[CHECK PART] " .. part:GetFullName())

    local prompt = part:FindFirstChild("PPPart_PP")
    if not prompt then
        print("[MISSING] No PPPart_PP")
        return nil, nil
    end

    if not prompt:IsA("ProximityPrompt") then
        print("[TYPE ERROR] PPPart_PP is not ProximityPrompt")
        return nil, nil
    end

    local name = prompt.ObjectText or ""
    local action = prompt.ActionText or ""

    print("[PROMPT OK]")
    print("   ObjectText: '" .. name .. "'")
    print("   ActionText: '" .. action .. "'")

    return name, action
end

-- Parse percentage
local function extractPercentage(name, action)
    local text = (name or "") .. " " .. (action or "")
    if text == "" then
        print("[PARSE] Empty text")
        return nil
    end

    print("[PARSE] Text: " .. text:sub(1, 100) .. (text:len() > 100 and "..." or ""))

    local clean = text:lower():gsub("%s+", "")
    local patterns = {
        "(%d+%.?%d*)%%",
        "(%d+)%%",
        "(%d+%.?%d*) ?percent",
        "%%(%d+)"
    }

    for _, pat in ipairs(patterns) do
        local numStr = clean:match(pat)
        if numStr then
            local v = tonumber(numStr)
            if v then
                print("[PARSE] Matched '" .. pat .. "' → " .. v)
                if v >= THRESHOLD then
                    print("[ACCEPT] " .. v .. "%")
                    return v
                else
                    print("[REJECT] " .. v .. "% < " .. THRESHOLD)
                end
            end
        end
    end

    print("[PARSE] No valid % found")
    return nil
end

-- Manual test scan on start
print("[TEST SCAN] Running manual scan once...")

for _, entry in ipairs(shelfPositions) do
    print("[POSITION] " .. entry.label .. " (Folder " .. entry.folderIdx .. ")")

    local folder = nil
    if entry.folderIdx == 1 then folder = folder1 end
    if entry.folderIdx == 2 then folder = folder2 end
    if entry.folderIdx == 3 then folder = folder3 end

    if not folder then
        print("  → Folder missing")
        continue
    end

    print("  Folder: " .. folder:GetFullName())

    local part = nil
    if entry.index then
        local children = folder:GetChildren()
        if not children then
            print("  → GetChildren() returned nil")
            continue
        end
        print("  Children count: " .. #children)
        if #children < entry.index + 1 then
            print("  → Index " .. entry.index .. " out of bounds")
            continue
        end
        part = children[entry.index + 1]
    elseif entry.name then
        part = folder:FindFirstChild(entry.name)
        if not part then
            print("  → Named child '" .. entry.name .. "' not found")
        end
    end

    if not part then
        print("  → Part not found")
        continue
    end

    print("  Part: " .. part:GetFullName())

    local name, action = getPromptInfo(part)
    if name then
        local percent = extractPercentage(name, action)
        if percent then
            print("  → DETECTED: " .. name .. " @ " .. percent .. "%")
        else
            print("  → No valid percentage")
        end
    else
        print("  → No valid prompt")
    end
end

print("[TEST SCAN] Finished. Check all lines above for details.")

