-- White ESP - ONLY exact brainrot model names in Plots 1-6
-- See-through walls, pulsing white highlight + floating name tag

local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")

-- Exact names — must match the model's .Name property exactly
local targets = {
    "La grande Combinasion",
    "KarKirKirKurKur",
    "Octamasu Noddledudu",
    "Rhino Toasterino",
    "Bulbito Bandito Traktorito",
    "Alessio",
    "Chillin Chilli",
    "Strawberry Elephant",
    "Torrtuginni Dragonfruitinni"
}

local highlighted = {}     -- prevents duplicate highlights
local allHighlights = {}   -- for cleanup

local function isTarget(name)
    for _, t in ipairs(targets) do
        if name == t then return true end
    end
    return false
end

local function highlightModel(model)
    if highlighted[model] then return end
    highlighted[model] = true

    -- White see-through highlight
    local hl = Instance.new("Highlight")
    hl.Name = "BrainrotESP"
    hl.FillColor = Color3.fromRGB(255, 255, 255)
    hl.OutlineColor = Color3.fromRGB(255, 255, 255)
    hl.FillTransparency = 0.4
    hl.OutlineTransparency = 0
    hl.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop   -- very important
    hl.Parent = model

    table.insert(allHighlights, hl)

    -- Floating name tag
    local root = model.PrimaryPart or model:FindFirstChildWhichIsA("BasePart", true)
    if root then
        local bb = Instance.new("BillboardGui")
        bb.Name = "NameTag"
        bb.Adornee = root
        bb.Size = UDim2.new(0, 260, 0, 60)
        bb.StudsOffset = Vector3.new(0, 4, 0)
        bb.AlwaysOnTop = true
        bb.Parent = root

        local txt = Instance.new("TextLabel")
        txt.Size = UDim2.new(1, 0, 1, 0)
        txt.BackgroundTransparency = 1
        txt.Text = model.Name
        txt.TextColor3 = Color3.new(1,1,1)
        txt.TextStrokeTransparency = 0
        txt.TextStrokeColor3 = Color3.new(0,0,0)
        txt.TextScaled = true
        txt.Font = Enum.Font.GothamBold
        txt.Parent = bb

        table.insert(allHighlights, bb)
    end

    -- Gentle pulse
    task.spawn(function()
        while hl.Parent do
            hl.FillTransparency = 0.4
            task.wait(0.8)
            hl.FillTransparency = 0.75
            task.wait(0.8)
        end
    end)

    print("Highlighted brainrot:", model.Name, "→", model:GetFullName())
end

local function scan()
    local plots = Workspace:FindFirstChild("Plots")
    if not plots then
        print("→ Plots folder not found")
        return
    end

    local count = 0

    for i = 1, 6 do
        local plot = plots:FindFirstChild(tostring(i))
        if not plot then continue end

        -- Only check models inside this plot
        for _, obj in ipairs(plot:GetDescendants()) do
            if obj:IsA("Model") and isTarget(obj.Name) then
                highlightModel(obj)
                count = count + 1
            end
        end

        -- Also check if the plot folder itself is named like a brainrot (unlikely but possible)
        if isTarget(plot.Name) then
            highlightModel(plot)
            count = count + 1
        end
    end

    if count == 0 then
        print("→ No matching brainrot models found right now")
    else
        print("→ Found and highlighted", count, "brainrot model(s)")
    end
end

print("Starting targeted brainrot ESP...")
scan()

-- Re-scan every ~3.5 seconds
local connection = RunService.Heartbeat:Connect(function()
    if tick() % 3.5 < 0.05 then
        scan()
    end
end)

-- Cleanup when character is removed
game.Players.LocalPlayer.CharacterRemoving:Connect(function()
    connection:Disconnect()
    for _, item in ipairs(allHighlights) do
        pcall(function() item:Destroy() end)
    end
    print("Brainrot ESP cleaned up")
end)

print("Active. Only these models will be highlighted:")
for _, name in ipairs(targets) do
    print("  • " .. name)
end
