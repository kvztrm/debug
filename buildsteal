-- Executor script: WHITE ESP ONLY on specific brainrot usernames
-- Highlights ONLY these exact names in Steal a Brainrot plots

local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- EXACT target usernames (case-sensitive match)
local targetUsers = {
    "La grande Combinasion",
    "KarKirKirKurKur",
    "Octamasu Noddledudu",
    "Rhino Toasterino",
    "Bulbito Bandito Traktorito",
    "Alessio",
    "Chillin Chilli",
    "Strawberry Elephant",
    "Torrtuginni Dragonfruitinni"
}

local highlightedModels = {}
local highlights = {}

-- Check if model name matches target
local function isTargetUser(modelName)
    for _, target in ipairs(targetUsers) do
        if modelName == target then
            return true
        end
    end
    return false
end

-- Create white highlight + name tag
local function addHighlight(model, username)
    if highlightedModels[model] then return end
    
    highlightedModels[model] = true
    
    -- White Highlight (see-through walls)
    local highlight = Instance.new("Highlight")
    highlight.FillColor = Color3.new(1, 1, 1)
    highlight.OutlineColor = Color3.new(1, 1, 1)
    highlight.FillTransparency = 0.3
    highlight.OutlineTransparency = 0
    highlight.Parent = model
    table.insert(highlights, highlight)
    
    -- Floating username tag
    local billboard = Instance.new("BillboardGui")
    billboard.Size = UDim2.new(0, 220, 0, 60)
    billboard.StudsOffset = Vector3.new(0, 4, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = model.PrimaryPart or model:FindFirstChildWhichIsA("BasePart") or model
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = username
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextStrokeTransparency = 0
    label.TextStrokeColor3 = Color3.new(0, 0, 0)
    label.TextScaled = true
    label.Font = Enum.Font.SourceSansBold
    label.Parent = billboard
    
    -- Pulsing effect (stands out)
    spawn(function()
        while highlight.Parent do
            highlight.FillTransparency = 0.3
            task.wait(0.6)
            highlight.FillTransparency = 0.6
            task.wait(0.6)
        end
    end)
    
    print("‚úÖ HIGHLIGHTED: " .. username .. " ‚Üí " .. model:GetFullName())
end

-- Scan plots for target brainrots
local function scanPlots()
    local plots = Workspace:FindFirstChild("Plots")
    if not plots then return end
    
    for plotNum = 1, 6 do
        local plotName = tostring(plotNum)
        local plot = plots:FindFirstChild(plotName)
        if not plot then continue end
        
        -- Check ALL models in this plot
        for _, model in ipairs(plot:GetDescendants()) do
            if model:IsA("Model") and isTargetUser(model.Name) then
                addHighlight(model, model.Name)
            end
        end
        
        -- Also check plot itself
        if isTargetUser(plot.Name) then
            addHighlight(plot, plot.Name)
        end
    end
end

-- Initial scan
print("üîç Scanning plots 1-6 for target brainrots...")
scanPlots()

-- Continuous scan (new brainrots / respawns)
local connection
connection = RunService.Heartbeat:Connect(function()
    scanPlots()
end)

-- Cleanup
LocalPlayer.CharacterRemoving:Connect(function()
    connection:Disconnect()
    for _, h in ipairs(highlights) do
        if h then pcall(h.Destroy, h) end
    end
end)

print("‚ú® WHITE ESP ACTIVE - Only target brainrots highlighted!")
print("Targets: " .. table.concat(targetUsers, ", "))
