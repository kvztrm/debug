-- Executor script: Scan for MULTIPLE target usernames ‚Üí white steal markers + positions

local Workspace = game:GetService("Workspace")
local PlotsFolder = Workspace:FindFirstChild("Plots")

if not PlotsFolder then
    print("‚ùå Plots folder not found!")
    return
end

-- ALL target usernames (case-insensitive matching)
local targetUsers = {
    "La grande Combinasion",
    "KarKirKirKurKur",
    "Octamasu Noddledudu", 
    "Rhino Toasterino",
    "Bulbito Bandito Traktorito",
    "Alessio",
    "Chillin Chilli",
    "Strawberry Elephant",
    "Torrtuginni Dragonfruitinni"
}

-- Steal positions per plot
local stealPositions = {
    ["1"] = Vector3.new(-170, 7, 194),
    ["2"] = Vector3.new(-282, 7, 126),
    ["3"] = Vector3.new(-281, 7, -54),
    ["4"] = Vector3.new(-182, 7, -133),
    ["5"] = Vector3.new(-70, 7, -66),
    ["6"] = Vector3.new(-71, 7, 114)
}

print("üîç Scanning plots 1‚Äì6 for target users...\n")

local foundUsers = {}

for plotNum = 1, 6 do
    local plotName = tostring(plotNum)
    local plot = PlotsFolder:FindFirstChild(plotName)
    
    if not plot then
        continue
    end
    
    -- Navigate to Text1
    local textLabel = plot:FindFirstChild("Sign")
    if textLabel then
        textLabel = textLabel:FindFirstChild("SignBlock")
        if textLabel then
            textLabel = textLabel:FindFirstChild("BaseSign")
            if textLabel then
                textLabel = textLabel:FindFirstChild("Text1")
            end
        end
    end
    
    local signText = ""
    if textLabel and textLabel:IsA("TextLabel") then
        signText = textLabel.Text or ""
    end
    
    -- Check ALL target users (case-insensitive)
    for _, target in ipairs(targetUsers) do
        if signText:lower():find(target:lower()) then
            local pos = stealPositions[plotName]
            table.insert(foundUsers, {
                plot = plotNum,
                user = target,
                text = signText,
                position = pos
            })
            
            print(string.format("‚úÖ PLOT %d ‚Üí %s", plotNum, target))
            print("   üìç Position: " .. tostring(pos))
            print()
            
            -- Create WHITE glowing marker
            if pos then
                local marker = Instance.new("Part")
                marker.Name = "StealTarget_Plot" .. plotNum .. "_" .. target:gsub(" ", "_")
                marker.Size = Vector3.new(14, 1.5, 14)
                marker.Position = pos
                marker.Anchored = true
                marker.CanCollide = false
                marker.Transparency = 0.3
                marker.Color = Color3.new(1, 1, 1)  -- PURE WHITE
                marker.Material = Enum.Material.Neon
                marker.Parent = Workspace
                
                -- White billboard label
                local bb = Instance.new("BillboardGui")
                bb.Size = UDim2.new(0, 160, 0, 60)
                bb.StudsOffset = Vector3.new(0, 5, 0)
                bb.AlwaysOnTop = true
                bb.Parent = marker
                
                local label = Instance.new("TextLabel")
                label.Size = UDim2.new(1, 0, 1, 0)
                label.BackgroundTransparency = 1
                label.Text = target .. "\nPlot " .. plotNum
                label.TextColor3 = Color3.new(1, 1, 1)
                label.TextStrokeTransparency = 0
                label.TextStrokeColor3 = Color3.new(0, 0, 0)
                label.TextScaled = true
                label.Font = Enum.Font.SourceSansBold
                label.Parent = bb
                
                -- Make it pulse (optional eye-candy)
                spawn(function()
                    while marker.Parent do
                        marker.Transparency = 0.3
                        task.wait(0.8)
                        marker.Transparency = 0.6
                        task.wait(0.8)
                    end
                end)
            end
            break  -- only match once per plot
        end
    end
end

print("üéØ SCAN COMPLETE")
print("Found " .. #foundUsers .. " target plots")

if #foundUsers == 0 then
    print("No matches found.")
end

print("\nüìã SUMMARY:")
for _, hit in ipairs(foundUsers) do
    print(string.format("Plot %d: %s @ %s", hit.plot, hit.user, tostring(hit.position)))
end
