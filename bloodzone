-- Cleanup at start
pcall(function()
    local s = workspace:FindFirstChild("Script")
    if s then s:Destroy() end
end)

local Players           = game:GetService("Players")
local RunService        = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualInput      = game:GetService("VirtualInputManager")

local lp = Players.LocalPlayer
local lastHealth = 100

-- Safe remote grab (won't error the loop if missing)
local remote
pcall(function()
    remote = ReplicatedStorage.Remotes.Requests.SetMenuState
end)

-- Fresh character fetch every loop
local function getCharAndHum()
    local char = lp.Character
    if not char then return nil, nil end
    local hum = char:FindFirstChildWhichIsA("Humanoid")
    return char, hum
end

while true do
    local success = pcall(function()
        local char, hum = getCharAndHum()
        if not char or not hum then
            RunService.Heartbeat:Wait()
            return
        end

        -- Target find (partial match, exclude self)
        local targetChar = nil
        for _, p in Players:GetPlayers() do
            if p ~= lp and (p.Name:lower():find("relkonta") or p.DisplayName:lower():find("relkonta")) then
                local tc = p.Character
                if tc and tc:FindFirstChild("HumanoidRootPart") then
                    targetChar = tc
                    break
                end
            end
        end

        -- Teleport + nudge
        if targetChar then
            local myRoot = char:FindFirstChild("HumanoidRootPart")
            local tRoot = targetChar:FindFirstChild("HumanoidRootPart")
            if myRoot and tRoot then
                local forward = tRoot.CFrame.LookVector
                local pos = tRoot.Position - forward * 1.4
                myRoot.CFrame = CFrame.new(pos, tRoot.Position)

                pcall(function() myRoot:SetNetworkOwner(lp) end)

                pcall(function()
                    hum:ChangeState(Enum.HumanoidStateType.Jumping)
                    task.wait(0.025)
                    myRoot.AssemblyLinearVelocity = Vector3.new(0, 18, 0)
                end)
            end
        end

        -- Health check (stricter: < 100 && previous >= 100)
        local curr = hum.Health
        if curr < 100 and lastHealth >= 100 then
            if remote then
                pcall(remote.InvokeServer, remote, true)
                task.wait(0.18)

                pcall(remote.InvokeServer, remote, false)
                task.wait(0.25)  -- increased slightly after close â†’ helps input register

                -- Double key press attempt (more reliable in flaky executors)
                pcall(function()
                    VirtualInput:SendKeyEvent(true, Enum.KeyCode.One, false, game)
                    task.wait(0.04)
                    VirtualInput:SendKeyEvent(false, Enum.KeyCode.One, false, game)
                end)

                task.wait(0.06)

                pcall(function()
                    VirtualInput:SendKeyEvent(true, Enum.KeyCode.One, false, game)
                    task.wait(0.04)
                    VirtualInput:SendKeyEvent(false, Enum.KeyCode.One, false, game)
                end)
            end
        end

        lastHealth = curr
    end)

    -- Prevent any unhandled error from killing loop
    if not success then
        -- silent fail (uncomment next line only if debugging)
        -- warn("Loop iteration error caught")
    end

    RunService.Heartbeat:Wait()
end
